<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context="com.masterj.thebasiccalculator.MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:keepScreenOn="true"
            android:text="@string/app_name"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2"
        >
        <Button
            android:id="@+id/button_clean"
            android:text="C"
            android:layout_height="80dp"
         />
        <Button
            android:id="@+id/button_pluseandminer"
            android:text="+/-"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_percent"
            android:text="%"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_en_percent"
            android:text="/"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/button_num_seven"
            android:text="7"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_eigth"
            android:text="8"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_nine"
            android:text="9"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_multiply"
            android:text="X"
            android:layout_height="80dp"
            />


        <Button
            android:id="@+id/button_num_four"
            android:text="4"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_five"
            android:text="5"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_six"
            android:text="6"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_minerse"
            android:text="-"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/button_num_one"
            android:text="1"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_two"
            android:text="2"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_num_three"
            android:text="3"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_pluse"
            android:text="+"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/button_num_zero"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_commma"
            android:text="."
            android:layout_height="80dp"
            />
        <Button
            android:id="@+id/button_equal"
            android:text="="
            android:layout_height="80dp"
            />

    </GridLayout>
</LinearLayout>
